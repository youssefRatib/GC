{% extends 'template.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Pa</th>
                <th>Pv</th>
                <th>Tva</th>
              
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.Pa }}</td>
                <td>{{ produit.Pv }}</td>
                <td>{{ produit.Tva }}</td>
              
                <td><img src ="{{ asset('uploads/images/' ~ produit.image) }}"
   alt =""  width="100" height="100"></td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}" class = "btn btn-info">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}" class = "btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}"class = "btn btn-success">Create new</a>

{% endblock %}
